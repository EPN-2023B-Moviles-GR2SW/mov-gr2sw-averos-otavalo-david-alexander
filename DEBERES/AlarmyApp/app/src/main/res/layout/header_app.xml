<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fondo">

    <Button
        android:id="@+id/btnAddAlarma"
        android:layout_width="162dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:background="#3C3C3C"
        android:text="Próxima alarma >"
        android:textAllCaps="false"
        android:textColor="#FBFBFB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAvisoDeAlarma"
        android:layout_width="193dp"
        android:layout_height="37dp"
        android:text="Sonará en 4 días"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddAlarma" />

    <androidx.cardview.widget.CardView
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:padding="10dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fondo"
        >

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAvisoDeAlarma">


        <!-- Switch para activar/desactivar la alarma -->

        <TextView
            android:id="@+id/txtPromo2"
            android:layout_width="172dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:text="¡Desbloquear Premium!"
            android:textColor="#DDE43932"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.33"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPromo1" />

        <TextView
            android:id="@+id/txtPromo1"
            android:layout_width="152dp"
            android:layout_height="24dp"
            android:text="Invita a tus amigos y"

            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.305"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnPromo1"
            android:layout_width="52dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"
            android:background="#F80000"
            android:text="Ir"
            android:textAllCaps="false"
            android:textColor="#FDFDFD"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="8dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>